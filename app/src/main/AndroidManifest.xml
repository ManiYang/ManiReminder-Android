<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tw.edu.nthu.phys.astrolab.yangm.manireminder">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ListActivity"
            android:label="All Reminders"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".DetailActivity"
            android:label="Reminder Details"
            android:parentActivityName=".ListActivity" />
        <activity
            android:name=".EditActivity"
            android:label="Editing"
            android:parentActivityName=".DetailActivity" />
        <activity
            android:name=".HistoryViewActivity"
            android:label="@string/view_history"
            android:parentActivityName=".MainActivity" />

        <receiver
            android:name=".AlarmReceiver"
            android:exported="false" >
            <intent-filter>
                <action android:name="tw.edu.nthu.phys.astrolab.yangm.manireminder.TASKS" />
            </intent-filter>
        </receiver>

    </application>

</manifest>